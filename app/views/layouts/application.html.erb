<!doctype html>
<html lang="en" >
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <style>
      /* Custom placeholder text color */
      .custom-placeholder::placeholder {
        color: #fff; /* Change this to the desired color */
        opacity: 1; /* Optional: ensures the color is fully opaque */
      }

      input {
        color: #fff; /* Change this to the desired color */
        opacity: 1; /* Optional: ensures the color is fully opaque */
      }
    </style>

  </head>
  <body class="wrapper">
    <% if notice %>
      <%= render 'layouts/alerts' %>
    <% end %>

    <%= render 'home/header' %>

    <div class="form-group">
      <%= yield %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script>

        function updateClasses() {
            var elements = ['input', 'password']; // List of elements to target
            elements.forEach(function (tag) {
                var items = document.querySelectorAll(tag);
                items.forEach(function (element) {
                    element.classList.add("form-control");
                    element.classList.add("form-control-sm");
                    element.classList.add("bg-dark");
                    element.classList.add("text-white");
                    // element.classList.add("custom-placeholder");
                });
            });
        }
    </script>
  </body>
</html>

