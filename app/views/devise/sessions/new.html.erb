<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, class:"form-control form-control-sm bg-dark text-white custom-placeholder " , autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field form-group">
    <%= f.label :password %><br />
    <%= f.password_field :password, class:"form-control form-control-sm bg-dark text-white custom-placeholder " , autocomplete: "current-password" %>
  </div>

  <div class="actions form-group">
    <%= f.submit "Log in", class:"btn btn-outline-light"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
